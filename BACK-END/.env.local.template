# =============================================================================
# LinkedIn AI Commenter - Variables d'environnement DEV LOCAL
# =============================================================================
# Copier ce fichier en .env.local et remplir les valeurs.
#   cp .env.local.template .env.local
#
# NE JAMAIS COMMITTER .env.local (il est dans le .gitignore)
# =============================================================================

# ---------------------
# PostgreSQL
# ---------------------
POSTGRES_PASSWORD=dev_password_local

# ---------------------
# JWT Authentication
# ---------------------
# Generer une cle : python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_generate_a_32_char_secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ---------------------
# Encryption (PII en base)
# ---------------------
# Generer une cle : python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_ME_generate_fernet_key

# ---------------------
# Google OAuth
# ---------------------
# Client OAuth type "Extension Chrome" (pour le manifest.json)
GOOGLE_CLIENT_ID=CHANGE_ME_chrome_extension_client_id
# Client OAuth type "Application Web" (pour le backend)
GOOGLE_CLIENT_ID_WEB=CHANGE_ME_web_client_id

# ---------------------
# OpenAI
# ---------------------
OPENAI_API_KEY=CHANGE_ME_sk_your_openai_key

# ---------------------
# Redis
# ---------------------
REDIS_URL=redis://redis:6379

# ---------------------
# Application
# ---------------------
ENVIRONMENT=development
DEBUG=true

# ---------------------
# PostHog Analytics (desactive en local par defaut)
# ---------------------
POSTHOG_API_KEY=
POSTHOG_HOST=https://eu.i.posthog.com
POSTHOG_ENABLED=false

# ---------------------
# CORS & Hostnames Traefik local
# ---------------------
ALLOWED_ORIGINS=https://ai.local.dev,https://users.local.dev,https://site.local.dev,chrome-extension://*
CORS_CREDENTIALS=true
AI_API_HOST=ai.local.dev
USERS_API_HOST=users.local.dev
SITE_HOST=site.local.dev

# ---------------------
# Stripe (mode test)
# ---------------------
STRIPE_SECRET_KEY=CHANGE_ME_sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=CHANGE_ME_whsec_your_webhook_secret
STRIPE_PRICE_MEDIUM_MONTHLY=CHANGE_ME_price_medium
STRIPE_PRICE_PREMIUM_MONTHLY=CHANGE_ME_price_premium
STRIPE_SUCCESS_URL=https://site.local.dev/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CANCEL_URL=https://site.local.dev/cancel
STRIPE_PORTAL_RETURN_URL=https://site.local.dev/account/subscription

# ---------------------
# News (AI Service)
# ---------------------
NEWS_TTL_HOURS=48
DEBUG_NEWS=false
MAX_NEWS_CONCURRENCY=5
